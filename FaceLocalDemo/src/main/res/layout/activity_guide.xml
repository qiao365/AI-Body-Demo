<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.jdjr.risk.face.local.demo.main.CameraRotationActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="33sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:text="相机配置:"

            android:layout_marginBottom="10dp"
            />


        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="left"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="23sp"
            android:text="@string/guide_camera_configure"
            android:visibility="visible"

            />





        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="27sp"
            android:text="0"
            />

        <ImageView
            android:layout_width="160px"
            android:layout_height="120px"
            android:src="@drawable/faceframerotation0"
            />



        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="27sp"
            android:text="90"
            />
        <ImageView
            android:layout_width="160px"
            android:layout_height="120px"
            android:src="@drawable/faceframerotation90"
            />



        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="27sp"
            android:text="180"
            />
        <ImageView
            android:layout_width="160px"
            android:layout_height="120px"
            android:src="@drawable/faceframerotation180"
            />




        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="27sp"
            android:text="270"
            />
        <ImageView
            android:layout_width="160px"
            android:layout_height="120px"
            android:src="@drawable/faceframerotation270"
            />






        <Button
            style="@style/button_demo"
            android:background="@drawable/btn_bg_orange_selector"
            android:layout_marginTop="30dp"

            android:text="我全都看懂啦"
            android:onClick="launchDemo"

            />













    </LinearLayout>
</ScrollView>