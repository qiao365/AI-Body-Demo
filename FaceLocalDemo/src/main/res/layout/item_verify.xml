<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/verify_record_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    >



    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/record_id_view"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"

        />

    <TextView
        android:id="@+id/record_time_view"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"

        />

    <TextView
        android:id="@+id/verify_result_view"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="19sp"

        />

    <TextView
        android:id="@+id/record_user_view"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/check_score_view"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        />

    <TextView
        android:id="@+id/record_score_view"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        />

    <ImageView
        android:layout_marginLeft="17dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/record_face_view"
        android:layout_width="130px"
        android:layout_height="120px"
        android:scaleType="centerInside"
        />

    <Button
        android:layout_marginLeft="7dp"
        android:layout_gravity="center_vertical"

        android:id="@+id/bt_clone_face"

        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:background="@drawable/btn_bg_red_light"
        android:textSize="11sp"
        android:text="导出图片"

        android:visibility="gone"
        />










</LinearLayout>