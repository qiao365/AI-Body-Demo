<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jdjr.risk.face.local.demo.active.QRActivity"
    >

    <ImageView
        android:layout_gravity="center_horizontal"

        android:id="@+id/qr_view"
        android:layout_width="640px"
        android:layout_height="480px"
        android:src="@drawable/qaactivecodedegree0_gaitubao_com_500x667"
        />


    <TextureView
        android:layout_gravity="center_horizontal"

        android:id="@+id/preview_texture"
        android:layout_marginTop="30dp"
        android:layout_width="640px"
        android:layout_height="480px"

        />



    <Button
        style="@style/button_demo"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg_green_selector"
        android:text="扫描二维码获取激活码"
        android:onClick="getActiveCodeFromQRCode"
        />









</LinearLayout>
