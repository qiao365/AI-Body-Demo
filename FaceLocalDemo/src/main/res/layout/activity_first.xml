<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.jdjr.risk.face.local.demo.main.ReadMeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="33sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:text="用前必读:"

            android:layout_marginBottom="10dp"
            />


        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="left"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="23sp"
            android:text="@string/first_sdk_notes"
            android:visibility="visible"
            android:layout_marginBottom="30dp"

            />








        <Button
            android:id="@+id/launch_guide_button"
            style="@style/button_demo"
            android:background="@drawable/btn_bg_orange_selector"
            android:layout_marginTop="30dp"

            android:text="我全都看懂啦(9)"
            android:onClick="launchGuideActivity"

            />


        <Button
            android:layout_marginTop="130dp"

            style="@style/button_demo"
            android:background="@drawable/btn_bg_orange_selector"

            android:text="算法性能参数"
            android:onClick="startPerformanceActivity"

            android:layout_marginBottom="50dp"
            />












    </LinearLayout>
</ScrollView>