<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".register.RegisterRecordActivity"

    >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin_10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_edt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/search_hint" />
    </LinearLayout>




    <TextView
        android:id="@+id/empty_record_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:text="没有记录"
        />





    <Button
        android:layout_margin="9dp"
        android:layout_gravity="center_horizontal"

        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_bg_red_selector"

        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="33sp"
        android:text="删除全部用户"

        android:onClick="deleteAllUsers"

        />












    <android.support.v7.widget.RecyclerView
        android:id="@+id/register_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3fffffff"
        />



</LinearLayout>